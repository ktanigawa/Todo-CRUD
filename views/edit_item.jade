extends ./layout.jade

block title 
  title Edit Item
block content
  form(action="/edit_item/#{todo._id}?_method=PUT", method="POST", class="edit_item_form")
    fieldset
      .titleBox
        input(type="text", name="title", value="#{todo.title}", class="edit_item_input")
      .textBox
        textarea(type="text", name="description", class="edit_item_textarea")
          =todo.description
      .submitBox
        input(type="submit", value="Submit", class="edit_item_submit")
